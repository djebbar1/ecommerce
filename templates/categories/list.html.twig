{% extends 'base.html.twig' %}

{% block title %}Liste des produits de la catégorie {{ category.name }}{% endblock %}

{% block body %}
    <main class="container">
        <section class="row">
            <div class="col-12">
                <h1>Liste des produits de la catégorie {{ category.name }}</h1>
            </div>
            {% for product in products.data %}
    <div class="col-3 mb-3">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h2 class="card-title">{{ product.name }}</h2>
                {% if product.images|length > 0 %}
                <img src="{{ asset('assets/uploads/products/mini/300x300-' ~ product.images[0].name) }}" 
                class="card-img-top" alt="{{ product.name }}">
            {% endif %}
                <p class="card-text">{{ product.description }}</p>
                <div class="pos">
                    {% set isFavorite = false %}
                    
                    {# Vérifiez si le produit est dans la liste des favoris #}
                    
                    {# Affichez l'icône de cœur en fonction de l'état favori #}
                    
                    {% if isFavorite %}
                        <a href="{{ path('favoris_list', {'id': product.id, 'idCategories': product.categories.id}) }}"><i class="fa-solid fa-heart heart"></i></a>
                    {% else %}
                        <a href="{{ path('favoris_list', {'id': product.id, 'idCategories': product.categories.id}) }}"><i class="fa-regular fa-heart heart"></i></a>
                    {% endif %}
                </div>
                <a href="{{ path('products_details', {"slug": product.slug }) }}" class="btn btn-primary">Voir les détails</a>
            </div>
        </div>
    </div>
{% endfor %}

            {% set path = 'categories_list' %}
            {% set slug = category.id %}
            {% set pages = products.pages %}
            {% set currentPage = products.page %}
            {% include "_partials/pagination.html.twig" %}


        </section>
    </main>
    
{% endblock %}
